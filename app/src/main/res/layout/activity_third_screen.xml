<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second"
    android:background="@drawable/background">

    <include layout="@layout/profile_bar"/>

    <RelativeLayout android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:id="@+id/layout_edit_text"
        android:layout_above="@id/layout_spinner_buton"
        android:layout_marginTop="50sp">


        <TextView
            android:id="@+id/tvTitluOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Output:"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/tvOutput"
            android:layout_width="fill_parent"
            android:layout_height="448dp"
            android:height="500dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/tvTitluOutput"
            android:background="@color/colorWhite"
            android:text="TextView"
            android:layout_marginTop="25dp"
            android:textColor="@color/colorBackground" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_spinner_buton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_progress_bar"
        android:layout_marginBottom="10dp">


        <Button
            android:id="@+id/btn_next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_select_compiler"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_background_handler"
            android:text="Finish!" />

        <Button
            android:id="@+id/btn_back3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_select_compiler"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background_handler"
            android:text="Back" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/btn_first_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/progress_bar_unselected" />


        <TextView
            android:id="@+id/linie1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8.5dp"
            android:background="@drawable/progress_bar_lines"
            android:layout_toRightOf="@id/btn_first_page"
            android:layout_toLeftOf="@+id/btn_second_page"/>

        <Button
            android:id="@+id/btn_second_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/progress_bar_unselected"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/linie2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8.5dp"
            android:background="@drawable/progress_bar_lines"
            android:layout_toRightOf="@id/btn_second_page"
            android:layout_toLeftOf="@+id/btn_third_page"/>

        <Button
            android:id="@+id/btn_third_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/progress_bar_selected" />


    </RelativeLayout>

</RelativeLayout>