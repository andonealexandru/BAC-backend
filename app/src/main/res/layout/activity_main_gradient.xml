<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <include layout="@layout/profile_bar">
    </include>

    <ImageView
        android:id="@+id/imgView_preview"
        android:layout_width="fill_parent"
        android:layout_height="417dp"
        android:layout_above="@id/layout_btn_camera"
        android:contentDescription="@string/app_name"
        android:padding="40dp"
        app:srcCompat="@drawable/logo" />


    <RelativeLayout
        android:id="@+id/layout_btn_camera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_next"
        android:layout_marginBottom="30dp"
        >

        <Button
            android:id="@+id/camera_button"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/camera_button_enhanced3" />

        <Button
            android:id="@+id/gallery_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/gallery_button_enhanced" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above = "@id/layout_progress_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_background_handler"
        android:text="Next" />


    <RelativeLayout
        android:id="@+id/layout_progress_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/btn_first_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/progress_bar_selected" />


        <TextView
            android:id="@+id/linie1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8.5dp"
            android:background="@drawable/progress_bar_lines"
            android:layout_toRightOf="@id/btn_first_page"
            android:layout_toLeftOf="@+id/btn_second_page"/>

        <Button
            android:id="@+id/btn_second_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/progress_bar_unselected"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:id="@+id/linie2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="8.5dp"
            android:background="@drawable/progress_bar_lines"
            android:layout_toRightOf="@id/btn_second_page"
            android:layout_toLeftOf="@+id/btn_third_page"/>

        <Button
            android:id="@+id/btn_third_page"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/progress_bar_unselected" />
    </RelativeLayout>

</RelativeLayout>